<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
	<targets>
		<target xsi:type="File" name="fileTarget" fileName="${environment:LOG_DIRECTORY}/log.txt"
            layout="${longdate} | ${callsite} | ${level:uppercase=true} | ${message}" />

		<target xsi:type="Console" name="consoleTarget" 
            layout="${longdate} | ${callsite} | ${level:uppercase=true} | ${message}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Information" writeTo="fileTarget" />
		<logger name="*" minlevel="Information" writeTo="consoleTarget" />
	</rules>
</nlog>